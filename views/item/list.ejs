<!DOCTYPE html>
<html>
<head>
    <title>Item List</title>
    <style>
        /* item-list-style.css */

        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
        }

        h1 {
            font-size: 24px;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            border: 1px solid #ccc;
        }

        th, td {
            padding: 10px;
            border-bottom: 1px solid #ccc;
        }

        th {
            background-color: #f5f5f5;
            font-weight: bold;
        }

        tr:hover {
            background-color: #f0f0f0;
        }

        a {
            text-decoration: none;
            color: #007bff;
        }

        .add-button {
            display: block;
            margin-top: 20px;
        }

    </style>
</head>
<body>
<div class="container">
        <h1>Item List</h1>
        <table>
            <tr>
                <th>Category</th>
                <th>Title</th>
                <th>Description</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
            <% items.forEach(item => { %>
            <tr>
                <td><%= item.category.title %></td>
                <td><%= item.title %></td>
                <td><%= item.description %></td>
                <td><%= item.active ? 'Yes' : 'No' %></td>
                <td>
                    <a href="/item/update/<%= item._id %>">Update</a> |
                    <a href="/item/delete/<%= item._id %>">Delete</a>
                </td>
            </tr>
            <% }); %>
        </table>
        <a class="add-button" href="/item/add">Add Item</a>
    </div>
</body>
</html>
